{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "models/**",
          "routes/**",
          "middleware/**",
          ".env",
          "scripts/**",
          "public/uploads/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 